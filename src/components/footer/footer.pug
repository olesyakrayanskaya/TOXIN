-
  var foot_nav_list_array = [
    {name:"About Us", link:"http://"},
    {name:"News", link:"http://"},
    {name:"Support", link:"http://"},
    {name:"Products", link:"http://"},
  ]

-
  var foot_about_list_array = [
    {name:"Who we are", link:"http://"},
    {name:"Our team", link:"http://"},
    {name:"Careers", link:"http://"},
    {name:"Investors", link:"http://"},
  ] 

-
  var foot_support_list_array = [
    {name:"Documentation", link:"http://"},
